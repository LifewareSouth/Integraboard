<Window x:Class="WpfApp1.Pages.Dialogs.PictoPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Pages.Dialogs"
        mc:Ignorable="d"
        Title="PictoPreview" Height="450" Width="450"
        WindowStyle = "None"
        ResizeMode = "NoResize">
    <Grid Background="#04293a">
        <Border BorderBrush="#707070"
                BorderThickness="2"
                Grid.RowSpan="2"/>
        <Grid Grid.Row="1"
              Background="White"
              Height="380"
              Width="380">
            <Border x:Name="bordePict"
                Height="380"
                Width="380"
                BorderBrush="DeepPink"
                BorderThickness="12"
                Grid.Row="1">
                <StackPanel>
                    <Image x:Name="pictoPreview"
                   Height="300"
                   Width="300"/>
                    <TextBlock x:Name="pictoTexto"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"
                           Foreground="Black"
                           FontSize="35"
                           FontFamily="arial"
                           FontWeight="SemiBold"
                           TextAlignment="Center"
                           VerticalAlignment="Bottom"/>
                </StackPanel>

            </Border>
        </Grid>
        <Label Content="Previsualización"
               Foreground="White"
               FontSize="30"
               FontFamily="arial"
               FontWeight="SemiBold"
               Margin="20,10,0,0"/>
        <Button x:Name="closePreview"
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                HorizontalAlignment="Right"
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                Click="closePreview_Click"
                Height="50"
                Width="50">
            <Image Source="{DynamicResource closeButton}"
                   Height="45"
                   Width="40"/>
        </Button>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

    </Grid>
</Window>
