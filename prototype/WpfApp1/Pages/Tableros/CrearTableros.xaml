<Page x:Class="WpfApp1.Pages.Tableros.CrearTableros"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.Tableros"
      xmlns:myControls="clr-namespace:WpfApp1.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="CrearTableros"
      Loaded="page_Loaded">

    <Grid Background="#04293a">
        <Frame x:Name="CrearTablero" NavigationUIVisibility="Hidden"/>
        
        <StackPanel Orientation="Horizontal"
                    Grid.ColumnSpan="2">
            <!--Botón para volver al menú-->
            <Button x:Name="volverTableros"
                    Width="180"
                    Height="70"
                    Margin="20,0,20,0"
                    Content="Tableros"
                    FontFamily="arial"
                    FontSize="30"
                    FontWeight="SemiBold"
                    Foreground="white"
                    Background="#1597e5"
                    Click="goToTableros"/>
            <!---->
            <Label Content="Crear Tablero de Comunicación" 
                   FontFamily="Arial"
                   FontWeight="Bold"
                   FontSize="60" 
                   Foreground="White"
                   VerticalAlignment="Center"
                   />
        </StackPanel>

        <Rectangle Grid.Row="1"
                   Grid.Column="1"
                   Grid.RowSpan="2"
                   Height="680"
                   Width="420"
                   Fill="#003b49"
                   VerticalAlignment="Top"/>
        <Grid Grid.Column="1"
              Grid.Row="1"
              Grid.RowSpan="2">
           <!--botonera del costado derecho-->
            <StackPanel Orientation="Vertical"
                        Width="420"
                        Height="680"
                        VerticalAlignment="Top">
                <Label Content="Propiedades del Tablero"
                       HorizontalAlignment="Center"
                       Foreground="white"
                       FontSize="35"
                       FontFamily="arial"
                       FontWeight="SemiBold"/>

                <Label Content="Nombre:"
                       Foreground="white"
                       FontSize="25"
                       FontFamily="arial"
                       Margin="15,0,0,0"/>
                <TextBox x:Name="nombreTablero" Height="40"
                         Width="300"
                         FontSize="30"
                         HorizontalAlignment="Left"
                         Background="White"
                         Foreground="Black"
                         Margin="20,0,0,0"/>

                <Label Content="Filas:"
                       Foreground="white"
                       FontSize="25"
                       FontFamily="arial"
                       Margin="15,10,0,0"
                       />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button x:Name="LessRows"
                            Content="-"
                            FontSize="30"
                            Foreground="White"
                            Height="40"
                            Width="40"
                            Background="#1597e5" Click="LessRows_Click"/>
                    <Label x:Name="rows"
                           Content="4"
                           FontSize="30"
                           Foreground="White"
                           Margin="80,0,80,0"/>
                    <Button x:Name="MoreRows"
                            Content="+"
                            FontSize="30"
                            Foreground="White"
                            Height="40"
                            Width="40"
                            Background="#1597e5" Click="MoreRows_Click"/>
                </StackPanel>
                <Label Content="Columnas:"
                       Foreground="white"
                       FontSize="25"
                       FontFamily="arial"
                       Margin="15,0,0,0"/>
                <StackPanel Orientation="horizontal"
                            HorizontalAlignment="Center">
                    <Button x:Name="LessCols"
                            Content="-"
                            FontSize="30"
                            Foreground="White"
                            Height="40"
                            Width="40"
                            Background="#1597e5" Click="LessCols_Click"/>
                    <Label x:Name="Cols"
                           Content="4"
                           FontSize="30"
                           Foreground="White"
                           Margin="80,0,80,0"/>
                    <Button x:Name="MoreCols"
                            Content="+"
                            FontSize="30"
                            Foreground="White"
                            Height="40"
                            Width="40"
                            Background="#1597e5" Click="MoreCols_Click"/>
                </StackPanel>
                <Label Content="Etiquetas:"
                       FontSize="25"
                       Foreground="White"
                       Margin="15,0,0,0"/>
                <TextBox x:Name="Tags"
                         Height="40"
                         Width="300"
                         FontSize="30"
                         HorizontalAlignment="Left"
                         Margin="20,0,0,0"/>
                <TextBlock Text="Seleccione el pictograma que representará al tablero:"
                           FontSize="20"
                           Foreground="white"
                           TextWrapping="Wrap"
                           Margin="15,10,0,0"/>
                <!--<Button x:Name="PictoRepresent"
                        Height="125"
                        Width="125"
                        Background="white"
                        Foreground="Black"
                        BorderBrush="#707070"
                        MouseDoubleClick="PictoRepresent_DoubleClick"
                        FontSize="50"
                        Content="+"/>-->
                <Button x:Name="PictoRepresent"
                        MouseDoubleClick="PictoRepresent_DoubleClick">
                    <Button.Template>
                        <ControlTemplate>
                        <Image 
                           Source="{Binding Path=pictPortada.Imagen, RelativeSource={RelativeSource AncestorType=RelativeSource}}"
                           Height="125"
                           Width="125"
                           />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                

                <Button x:Name="guardarTablero"
                        Content="Guardar"
                        Foreground="White"
                        FontSize="25"
                        Height="50"
                        Width="150"
                        Margin="0,10,0,0"
                        Background="#1597e5" Click="guardarTablero_Click"/>
            </StackPanel>
        </Grid>
        
        <!--grid del costado con los pictogramas-->
        <Grid Grid.Row="1"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1"
                  Grid.Column="1">
                <Rectangle Fill="#003b49"/>
                <Grid x:Name="testTablero2"   >
                    <Viewbox >
                    <ListView x:Name="Tablero"
                              Background="Transparent"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ItemsSource="{Binding Path=vistas, RelativeSource={RelativeSource AncestorType=RelativeSource}}" 
                              SelectionChanged="Tablero_SelectionChanged"
                              MouseDoubleClick="doubleclick_addpictogram"
                              AllowDrop="True"
                              DragLeave="Tablero_DragLeave"
                              DragOver="Tablero_DragOver"
                              >
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <EventSetter Event="MouseMove" Handler="TodoItem_MouseMove" />
                                    <EventSetter Event="DragOver" Handler="TodoItem_DragOver" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ItemsControl.ItemsPanel >
                            <ItemsPanelTemplate x:Name="panelTest">
                                <UniformGrid Rows="{Binding rowCounter}" 
                                             Columns="{Binding columnsCounter}"
                                             Grid.IsSharedSizeScope="True" 
                                             Height="auto"  
                                             Width="auto"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             x:Name="testTablero"
                                             
                                             />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate >
                                    <Grid >
                                        <Border 
                                                Width="200" Height="200"
                                                BorderBrush="{Binding pictograma.colorBorde}"
                                                BorderThickness="10">
                                        <StackPanel 
                                            HorizontalAlignment="Center"
                                            Orientation="Vertical">
                                            <Image Source="{Binding pictograma.Imagen}"
                                               Height="120"
                                               Width="120"
                                               Margin="10"/>
                                            <TextBlock Text="{Binding pictograma.Texto}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap"
                                                Foreground="White"
                                                FontSize="25"
                                                FontFamily="arial"
                                                FontWeight="SemiBold"
                                                TextAlignment="Center"
                                                VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
        <!--botonera debajo del grid de pictogramas, con opciones de pictogramas-->
        <Grid Grid.Row="2"
              Grid.Column="0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="CrearPictograma"
                        Height="50"
                        Width="200"
                        Content="Crear Pictogramas"
                        FontSize="20"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Background="#1597e5"
                        Click="goToCrearPictos"/>
                <Button x:Name="EditarPictograma"
                        Height="50"
                        Width="200"
                        Content="Editar Pictogramas"
                        FontSize="20"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Background="#1597e5"
                        Margin="20" Click="EditarPictograma_Click"/>
                <Button x:Name="QuitarPictograma"
                        Height="50"
                        Width="200"
                        Content="Quitar Pictogramas"
                        FontSize="20"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Background="#1597e5" Click="QuitarPictograma_Click"/>
            </StackPanel>
            
        </Grid>        
        
        <!--Grid de la vista completa-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="450"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="105"/>
            <RowDefinition Height="590"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Page>