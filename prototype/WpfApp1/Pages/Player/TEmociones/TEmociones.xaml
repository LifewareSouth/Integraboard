<Page x:Class="WpfApp1.Pages.Player.TEmociones.TEmociones"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.Player.TEmociones"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="TEmociones"
      Loaded="page_Loaded">
    <Grid Background="#04293a">
        <Frame x:Name="TEmocionesPlayer"/>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Background="#003b49">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Button x:Name="volverMenu"
                        Width="150"
                        Height="150"
                        Content="Menú"
                        FontFamily="arial"
                        FontSize="30"
                        FontWeight="SemiBold"
                        Foreground="white"
                        Background="#1597e5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" 
                        Click="volverMenu_Click"/>
                <!--
                <Label x:Name="TituloTEmociones"
                       Content="Tablero de Emociones"
                       Foreground="White"
                       FontSize="45"
                       FontWeight="SemiBold"
                       FontFamily="arial"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                -->
            </Grid>
            <Grid Grid.Row="0"
                  Grid.RowSpan="2">
                <StackPanel Orientation="Vertical">
                    <Border x:Name="pictoEmocion"
                            Height="300"
                            Width="300"
                            BorderBrush="Yellow"
                            BorderThickness="12"
                            Margin="20"/>
                    <Grid Grid.Column="1" 
                          Margin="0,0,0,28" 
                          Height="436" 
                          Width="1150">
                        <Grid x:Name="testTablero2"
                              Width="1150">
                            <Viewbox Width="1150">
                                <ListView x:Name="Tablero"
                                          Width="1628"
                                          Background="Transparent"
                                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                          ItemsSource="{Binding Path=vistas, RelativeSource={RelativeSource AncestorType=RelativeSource}}" 
                                          d:ItemsSource="{d:SampleData ItemCount=4}" BorderBrush="{x:Null}">

                                    <ItemsControl.ItemsPanel >
                                        <ItemsPanelTemplate x:Name="panelTest">
                                            <UniformGrid Rows="{Binding rowCounter}" 
                                             Columns="{Binding columnsCounter}"
                                             Grid.IsSharedSizeScope="True" 
                                             Height="auto"  
                                             Width="auto"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             x:Name="testTablero"
                                             
                                             />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ListView.ItemTemplate>
                                        <DataTemplate >
                                            <Grid Background="White" >
                                                <Border 
                                                Width="200" Height="200"
                                                BorderBrush="{Binding pictograma.colorBorde}"
                                                BorderThickness="10">
                                                    <StackPanel 
                                            HorizontalAlignment="Center"
                                            Orientation="Vertical">
                                                        <Image Source="{Binding pictograma.Imagen}"
                                               Height="120"
                                               Width="120"
                                               Margin="10"/>
                                                        <TextBlock Text="{Binding pictograma.Texto}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap"
                                                Foreground="black"
                                                FontSize="25"
                                                FontFamily="arial"
                                                FontWeight="SemiBold"
                                                TextAlignment="Center"
                                                VerticalAlignment="Bottom"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>

                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Viewbox>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        
    </Grid>
</Page>
